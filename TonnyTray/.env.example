# TonnyTray Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control - it's in .gitignore

# ============================================
# Application Settings
# ============================================
NODE_ENV=development
LOG_LEVEL=INFO

# ============================================
# WhisperLiveKit Server Configuration
# ============================================
WHISPER_MODEL=base
WHISPER_LANGUAGE=en
WHISPER_HOST=localhost
WHISPER_PORT=8888
VITE_WS_URL=ws://localhost:8888/asr

# Model options: tiny, base, small, medium, large-v3
# Larger models = better accuracy but slower processing

# ============================================
# n8n Integration
# ============================================
VITE_N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/ask-tonny
N8N_WEBHOOK_AUTH_TOKEN=your_webhook_token_here

# ============================================
# ElevenLabs Configuration (Optional)
# ============================================
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
ELEVENLABS_MODEL=eleven_monolingual_v1
ELEVENLABS_ENABLED=false

# Voice IDs can be found at: https://elevenlabs.io/voice-library

# ============================================
# Database Configuration
# ============================================
# PostgreSQL
POSTGRES_USER=tonnytray
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=tonnytray
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# SQLite (alternative to PostgreSQL for simple setups)
SQLITE_PATH=/home/${USER}/.config/tonnytray/tonnytray.db

# Choose your database: postgresql or sqlite
DATABASE_TYPE=sqlite

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# ============================================
# RabbitMQ Configuration (Optional)
# ============================================
RABBITMQ_USER=tonnytray
RABBITMQ_PASSWORD=change_this_rabbit_password
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_VHOST=tonnytray
RABBITMQ_MGMT_PORT=15672

# ============================================
# Development Tools
# ============================================
# PgAdmin
PGADMIN_EMAIL=admin@tonnytray.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Redis Commander
REDIS_COMMANDER_PORT=8081

# Vite Dev Server
VITE_PORT=1420

# ============================================
# Production Settings
# ============================================
# Nginx
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_this_grafana_password
GRAFANA_PLUGINS=

# Performance Tuning
MAX_CONNECTIONS=10
WORKER_THREADS=4

# ============================================
# Security Settings
# ============================================
# JWT Secret for authentication (generate with: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_here_change_this

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# CORS Settings
CORS_ORIGIN=http://localhost:1420,https://your-domain.com

# ============================================
# Feature Flags
# ============================================
ENABLE_TELEMETRY=false
ENABLE_AUTO_UPDATE=true
ENABLE_VOICE_BIOMETRICS=false
ENABLE_OFFLINE_MODE=false

# ============================================
# User Settings (stored per-user)
# ============================================
# These are defaults; users can override in the GUI
DEFAULT_COMMAND_PREFIX="Computer,"
DEFAULT_CONFIRMATION_MODE=visual
DEFAULT_RESPONSE_MODE=both
AUTO_START_ON_BOOT=true
AUTO_RESTART_ON_CRASH=true

# ============================================
# Backup Configuration
# ============================================
BACKUP_SCHEDULE="@daily"
BACKUP_KEEP_DAYS=7
BACKUP_KEEP_WEEKS=4
BACKUP_KEEP_MONTHS=6
BACKUP_PATH=/var/backups/tonnytray

# ============================================
# Logging Configuration
# ============================================
LOG_FILE_PATH=/var/log/tonnytray/tonnytray.log
LOG_MAX_SIZE=10M
LOG_MAX_FILES=5
LOG_FORMAT=json

# ============================================
# Docker-specific settings
# ============================================
# These are only used when running in Docker
COMPOSE_PROJECT_NAME=tonnytray
COMPOSE_FILE=docker-compose.dev.yml
