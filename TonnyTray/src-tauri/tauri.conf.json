{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TonnyTray",
  "version": "0.1.0",
  "identifier": "com.tonnytray.app",
  "build": {
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "TonnyTray",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "visible": false,
        "decorations": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src ipc: http://ipc.localhost ws://localhost:*"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "Utility",
    "shortDescription": "WhisperLiveKit System Tray",
    "longDescription": "System tray application for controlling WhisperLiveKit voice transcription and home automation",
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"]
      }
    }
  }
}
